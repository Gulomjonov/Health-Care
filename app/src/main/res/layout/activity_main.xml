<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#f1f1f1"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#2196F3"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_gita"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_margin="5sp"
            android:baselineAligned="false"
            android:gravity="left|center"
            android:fontFamily="Arial"
            android:letterSpacing=".1"
            android:text="Kasalliklar"
            android:textColor="#F9F9FA"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_more"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/btn_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:adjustViewBounds="true"
            android:maxWidth="50dp"
            android:maxHeight="50dp"
            android:src="@drawable/info"
            android:layout_marginStart="5dp"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="@+id/txt_gita"
            app:layout_constraintEnd_toEndOf="@+id/txt_gita"
            app:layout_constraintTop_toTopOf="@+id/txt_gita" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/constraint"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="2dp">
                <ImageView
                    android:id="@+id/gita"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/detimin"
                    android:scaleType="centerCrop"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chaqaloqlar kasalliklari"
                    android:textColor="#f1f1f1"
                    android:letterSpacing="0.2"
                    android:textSize="18sp"
                    android:layout_gravity="bottom"
                    android:shadowDy="2"
                    android:shadowDx="2"
                    android:shadowColor="@color/white"
                    android:padding="8dp"
                    android:background="@color/purple_200"
                    android:shadowRadius="20"/>
            </FrameLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="2dp">
                <ImageView
                    android:id="@+id/robo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/scalemin"
                    android:scaleType="centerCrop"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bolalar kasalliklari"
                    android:textColor="#f1f1f1"
                    android:letterSpacing="0.2"
                    android:textSize="18sp"
                    android:padding="8dp"
                    android:background="@color/purple_200"
                    android:layout_gravity="bottom"
                    android:shadowDy="2"
                    android:shadowDx="2"
                    android:shadowColor="@color/white"
                    android:shadowRadius="20"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="2dp">

                <ImageView
                    android:id="@+id/najot"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/katta"
                    android:scaleType="centerCrop"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="O'rta yoshdagi kasalliklar"
                    android:textColor="#f1f1f1"
                    android:letterSpacing="0.2"
                    android:textSize="18sp"
                    android:layout_gravity="bottom"
                    android:padding="8dp"
                    android:background="@color/purple_200"
                    android:shadowDy="2"
                    android:shadowDx="2"
                    android:shadowColor="@color/white"
                    android:shadowRadius="20"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="2dp">
                <ImageView
                    android:id="@+id/pdp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/minexer"
                    android:scaleType="centerCrop"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Katta yoshdagi kasalliklar"
                    android:textColor="#f1f1f1"
                    android:letterSpacing="0.2"
                    android:textSize="18sp"
                    android:layout_gravity="bottom"
                    android:shadowDy="2"
                    android:shadowDx="2"
                    android:shadowColor="@color/white"
                    android:padding="8dp"
                    android:background="@color/purple_200"
                    android:shadowRadius="20"/>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>