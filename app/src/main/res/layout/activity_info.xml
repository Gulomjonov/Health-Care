<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Info_Activity"
    android:background="#ffffff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:text="Yangi tug'ilgan chaqaloqlarning kasalliklari"
                android:background="#2196F3"
                android:textColor="#ffffff"
                android:gravity="center"
                android:padding="10dp"
                android:letterSpacing=".2"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowColor="#f1f1f1"
                android:textSize="14sp"
                android:textStyle="bold|italic"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:src="@drawable/detimin"
                android:scaleType="centerCrop"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/gita1"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Akusherlik falaji"
                    android:background="@drawable/bg_button"
                    android:textColor="#ffffff"
                    android:gravity="left|center"
                    android:padding="10dp"
                    android:layout_margin="15dp"
                    android:letterSpacing=".2"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowColor="#f1f1f1"
                    android:clickable="true"
                    android:onClick="serve"
                    android:foreground="?android:selectableItemBackground"
                    android:textSize="14sp"
                    android:textStyle="bold|italic"
                    />

            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Yangi tug'ilgan chaqaloqning gemorragik kasalligi"
                    android:background="@drawable/bg_button"
                    android:textColor="#ffffff"
                    android:gravity="left|center"
                    android:padding="10dp"
                    android:layout_margin="15dp"
                    android:letterSpacing=".2"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowColor="#f1f1f1"
                    android:clickable="true"
                    android:id="@+id/lms"
                    android:foreground="?android:selectableItemBackground"
                    android:textSize="14sp"
                    android:textStyle="bold|italic"
                    />

                </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                <TextView
                    android:id="@+id/xemis"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Yangi tug'ilgan chaqaloqlarning fiziologik sariqligi"
                    android:background="@drawable/bg_button"
                    android:textColor="#ffffff"
                    android:gravity="left|center"
                    android:padding="10dp"
                    android:layout_margin="15dp"
                    android:letterSpacing=".2"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowColor="#f1f1f1"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:textSize="14sp"
                    android:textStyle="bold|italic"
                    />
                    </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/info5"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Yangi tug'ilgan chaqaloqlarning gemolitik sariqligi"
                    android:background="@drawable/bg_button"
                    android:textColor="#ffffff"
                    android:gravity="left|center"
                    android:padding="10dp"
                    android:layout_margin="15dp"
                    android:letterSpacing=".2"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowColor="#f1f1f1"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:textSize="14sp"
                    android:textStyle="bold|italic"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/info6"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Yangi tug'ilgan chaqaloqlarda sariqlik uchun fototerapiya"
                    android:background="@drawable/bg_button"
                    android:textColor="#ffffff"
                    android:gravity="left|center"
                    android:padding="20dp"
                    android:layout_margin="15dp"
                    android:letterSpacing=".2"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowColor="#f1f1f1"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:textSize="14sp"
                    android:textStyle="bold|italic"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/info7"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Yangi tug'ilgan chaqaloqning vesikulopustulozi"
                    android:background="@drawable/bg_button"
                    android:textColor="#ffffff"
                    android:gravity="left|center"
                    android:padding="10dp"
                    android:layout_margin="15dp"
                    android:letterSpacing=".2"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowColor="#f1f1f1"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:textSize="14sp"
                    android:textStyle="bold|italic"
                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>