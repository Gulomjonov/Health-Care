<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    tools:context=".pdp_Activity1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="4dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:letterSpacing=".2"
                android:padding="20dp"
                android:shadowColor="#f1f1f1"
                android:shadowDx="2"
                android:shadowDy="2"
                android:text="Insult(qon tomir kasalliklari)"
                android:textColor="#082b43"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:padding="10dp"
                android:src="@drawable/about" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:letterSpacing=".2"
                android:padding="20dp"
                android:scaleType="centerCrop"
                android:shadowColor="#f1f1f1"
                android:shadowDx="2"
                android:shadowDy="2"
                android:text="Qon tomir miya qon aylanishining o'tkir buzilishi bo'lib, miyaning turli qismlarining disfunktsiyasiga olib keladi. Bugungi kunda qon tomirlari dunyodagi eng keng tarqalgan va xavfli kasalliklardan biridir. Qon tomiridan so'ng, odam omon qolsa, qobiliyatsiz bo'lishi mumkin.

                                Bugungi kunda dunyoda har yili ro'yxatga olingan insultlar soni 15 millionga etadi, shundan 5 million kishi vafot etadi va xuddi shu raqam butunlay falaj bo'ladi. Qon tomirlarining eng keng tarqalgan turi miyaning ishemik shikastlanishi bo'lib, ko'pincha miya qon ketishi deb ataladi."
                android:textColor="#082b43"
                android:textSize="14sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:letterSpacing=".2"
                    android:padding="20dp"
                    android:shadowColor="#f1f1f1"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:text="Davolash"
                    android:textColor="#082b43"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:letterSpacing=".2"
                    android:padding="20dp"
                    android:shadowColor="#f1f1f1"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:text="Kasalxonaga yotqizish va terapiyani boshlashning optimal muddatlari klinik ko'rinishlar boshlanganidan boshlab dastlabki 3 soat hisoblanadi. O'tkir davrda davolash ixtisoslashtirilgan nevrologik bo'limlarning intensiv terapiya bo'limlarida amalga oshiriladi, keyin bemor erta reabilitatsiya bo'limiga o'tkaziladi. Qon tomir turini aniqlashdan oldin, asosiy ajratilmagan terapiya o'tkaziladi, aniq tashxis qo'yilgandan so'ng, ixtisoslashtirilgan davolash o'tkaziladi, so'ngra uzoq muddatli reabilitatsiya qilinadi."
                    android:textColor="#082b43"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>